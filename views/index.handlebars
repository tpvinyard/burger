<h1 class="text-center">Burgers!</h1>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h2>Burgers not eaten!</h2>
            <ul>
            {{#each burger}}
                {{#unless devoured}}
                {{> burgers/burger-block devoured=true}}
                {{/unless}}
            {{/each}}
            </ul>
        </div>
        <div class="col-md-6">
            <h2>Devoured burgers!</h2>

            <ul>
            {{#each burger}}
                {{#if devoured}}
                {{> burgers/burger-block devoured=false}}
                {{/if}}
            {{/each}}
            </ul>
        </div>    
    </div>
    <div class="row">
        <div class="col-md-12 text-center">
            <h2>Make your burger</h2>
            <form class="create-form">

            <div class="form-group">
                <label for="burger-name">Burger Name:</label>
                <input type="text" id="burger-name" name="name">
            </div>

            <button type="submit">Add Burger</button>
            </form>
        </div>
    </div>
</div>